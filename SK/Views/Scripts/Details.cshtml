@model SK.Models.Script

@{
    ViewBag.Title = "剧本详情";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* 基础样式 - 与列表页保持一致 */
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #fff;
            background: rgba(0, 0, 0, 0.9);
            padding: 20px;
        }

        /* 页面标题 */
        .page-header {
            margin-bottom: 40px;
            text-align: center;
        }

        .page-header h1 {
            font-size: 3rem;
            color: #ffd700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            margin-bottom: 15px;
        }

        /* 卡片样式 */
        .detail-card {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 215, 0, 0.3);
            margin-bottom: 30px;
        }

        .card-header {
            background: linear-gradient(to right, #1a1a1a, #333);
            border-bottom: 1px solid rgba(255, 215, 0, 0.3);
            padding: 15px 20px;
        }

        .card-header h4 {
            color: #ffd700;
            margin: 0;
        }

        /* 详情内容样式 */
        .detail-content {
            padding: 20px;
        }

        dt {
            color: #ffd700;
            font-weight: normal;
            padding: 8px 0;
        }

        dd {
            padding: 8px 0;
            margin-bottom: 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* 剧本封面样式 */
        .script-cover {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid rgba(255, 215, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .script-cover:hover {
            transform: scale(1.02);
        }

        .no-cover {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 300px;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            font-size: 3rem;
            border-radius: 5px;
        }

        /* 预约表单样式 */
        .booking-card {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            border: 1px solid rgba(255, 215, 0, 0.3);
            margin-top: 30px;
        }

        .booking-header {
            background: linear-gradient(to right, #1a1a1a, #333);
            border-bottom: 1px solid rgba(255, 215, 0, 0.3);
            padding: 15px 20px;
        }

        .booking-header h5 {
            color: #ffd700;
            margin: 0;
        }

        .form-control, .form-select {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .form-control:focus, .form-select:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: #ffd700;
            color: black;
            box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
        }

        .btn-primary {
            background-color: #ffd700;
            border-color: #ffd700;
            color: #000;
        }

        .btn-primary:hover {
            background-color: #ffed4a;
            border-color: #ffed4a;
        }

        .btn-outline-secondary {
            border-color: rgba(255, 215, 0, 0.3);
            color: #ffd700;
        }

        .btn-outline-secondary:hover {
            background-color: rgba(255, 215, 0, 0.1);
            color: #ffed4a;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>@Model.Title</h1>
            <p>剧本详情与预约</p>
        </div>

        <div class="detail-card">
            <div class="card-header">
                <h4><i class="fas fa-info-circle me-2"></i>剧本详情</h4>
            </div>
            <div class="detail-content">
                <div class="row">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-3">剧本标题</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                            <dt class="col-sm-3">剧本类型</dt>
                            <dd class="col-sm-9">
                                <span class="badge" style="background-color: rgba(255, 215, 0, 0.2); color: #ffd700; border: 1px solid rgba(255, 215, 0, 0.5);">
                                    @Html.DisplayFor(model => model.Type)
                                </span>
                            </dd>

                            <dt class="col-sm-3">剧本描述</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Discription)</dd>

                            <dt class="col-sm-3">剧本内容</dt>
                            <dd class="col-sm-9" style="white-space: pre-line">@Html.DisplayFor(model => model.Content)</dd>

                            <dt class="col-sm-3">评分</dt>
                            <dd class="col-sm-9">
                                @for (int i = 0; i < Model.StarLevel; i++)
                                {
                                    <span class="text-warning">★</span>
                                }
                                @for (int i = Model.StarLevel; i < 5; i++)
                                {
                                    <span class="text-secondary">☆</span>
                                }
                              
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.img))
                        {
                            <div class="text-center mb-3">
                                <img src="@Url.Content(Model.img)" class="script-cover" alt="@Model.Title" loading="lazy">
                            </div>
                        }
                        else
                        {
                            <div class="no-cover">
                                @Model.Title.FirstOrDefault()
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- 预约表单 -->
        <div class="booking-card">
            <div class="booking-header">
                <h5><i class="fas fa-calendar-check me-2"></i>预约此剧本</h5>
            </div>
            <div class="detail-content">
                <form id="bookingForm">
                    
                        <div class="col-12 mt-3">
                            <a href="@Url.Action("Create","Orders")" class="btn btn-primary w-100 py-2">
                                <i class="fas fa-calendar-check me-2"></i>我要预约
                           </a>
                        </div>
                  
                </form>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("AllScripts","Scripts")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>返回列表
            </a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // 设置默认日期为明天
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            const formattedDate = tomorrow.toISOString().split('T')[0];
            $('#date').val(formattedDate);
            $('#date').attr('min', formattedDate); // 禁止选择今天之前的日期

            // 表单提交处理
            $('#bookingForm').submit(function(e) {
                e.preventDefault();

                // 获取表单数据
                const bookingData = {
                    scriptId: @Model.SId,
                    scriptTitle: '@Model.Title',
                    name: $('#name').val(),
                    phone: $('#phone').val(),
                    date: $('#date').val(),
                    time: $('#time').val(),
                    players: $('#players').val(),
                    notes: $('#notes').val()
                };

                // 简单验证
                if (!bookingData.name || !bookingData.phone || !bookingData.date || !bookingData.time) {
                    alert('请填写所有必填字段！');
                    return;
                }

                // 手机号验证
                if (!/^1[3-9]\d{9}$/.test(bookingData.phone)) {
                    alert('请输入有效的手机号码！');
                    return;
                }

                // 这里应该是AJAX提交到后端
                console.log('预约数据:', bookingData);

                // 模拟成功提交
                alert(`预约成功！\n剧本: ${bookingData.scriptTitle}\n时间: ${bookingData.date} ${bookingData.time}\n玩家人数: ${bookingData.players}\n我们将尽快与您确认。`);

                // 重置表单
                this.reset();
                $('#date').val(formattedDate); // 重置默认日期
                $('#players').val(4); // 重置玩家人数
            });
        });
    </script>
</body>
</html>