@model IEnumerable<SK.Models.Script>

@{
    ViewBag.Title = "全部剧本";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* 基础样式 */
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #fff;
            background: rgba(0, 0, 0, 0.9);
            padding: 20px;
        }

        /* 页面标题 */
        .page-header {
            margin-bottom: 40px;
            text-align: center;
        }

            .page-header h1 {
                font-size: 3rem;
                color: #ffd700;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 15px;
            }

            .page-header p {
                color: rgba(255, 255, 255, 0.7);
                font-size: 1.2rem;
            }

        /* 筛选栏 - 修改为同一行布局 */
        .filter-bar {
            background: rgba(0, 0, 0, 0.7);
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 215, 0, 0.3);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        /* 搜索框样式调整 */
        .search-box {
            flex: 1;
            min-width: 250px;
            display: flex;
        }

        .search-input {
            flex: 1;
            padding: 10px 15px;
            border: none;
            border-radius: 5px 0 0 5px;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .search-button {
            padding: 0 15px;
            border: none;
            border-radius: 0 5px 5px 0;
            background: #ffd700;
            color: #000;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .search-button:hover {
                background: #ffed4a;
            }

        /* 筛选选项样式调整 */
        .filter-options {
            display: flex;
            gap: 10px;
            flex: 1;
            min-width: 250px;
        }

        .filter-select {
            flex: 1;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
            color: gold;
            min-width: 120px;
        }

        /* 剧本网格 -  */
        .scripts-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 50px;
        }

        .script-card {
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            transform: translateY(50px);
            opacity: 0;
        }

            .script-card.visible {
                transform: translateY(0);
                opacity: 1;
            }

            .script-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            }

        .script-image-container {
            position: relative;
            padding-top: 150%;
            overflow: hidden;
        }

        .script-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

        .script-card:hover .script-image {
            transform: scale(1.05);
        }

        .script-info {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15px;
            background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0) 100%);
        }

        .script-title {
            font-size: 1rem;
            color: #fff;
            margin-bottom: 8px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .script-rating {
            color: #ffd700;
            font-size: 0.8rem;
        }

        .script-type {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.7);
            padding: 3px 8px;
            border-radius: 20px;
            font-size: 0.7rem;
            color: #ffd700;
            border: 1px solid rgba(255, 215, 0, 0.3);
        }

        .no-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            font-size: 1.5rem;
        }

        /* 新增返回按钮样式 */
        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 8px 15px;
            background: rgba(0, 0, 0, 0.7);
            color: #ffd700;
            border: 1px solid rgba(255, 215, 0, 0.3);
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .back-button:hover {
                background: #ffd700;
                color: #555;
                transform: translateX(-5px);
            }
    </style>
</head>
<body>
    <!-- 新增返回按钮 -->
    <a href="@Url.Action("Index", "Home")" class="back-button">
        <i class="fas fa-arrow-left me-2"></i>返回首页
    </a>

    <div class="container">
        <div class="page-header">
            <h1>全部剧本</h1>
        </div>

        <!-- 筛选栏 - 现在搜索和筛选在同一行 -->
        <div class="filter-bar">
            <!-- 搜索框 -->
            <div class="search-box">
                <input type="text" id="script-search" placeholder="搜索剧本名称或描述..." class="search-input">
                <button id="search-btn" class="search-button">
                    <i class="fas fa-search"></i>
                </button>
            </div>

            <!-- 筛选选项 -->
            <div class="filter-options">
                <select class="filter-select" id="type-filter">
                    <option value="">所有类型</option>
                    <option value="恐怖">恐怖</option>
                    <option value="情感">情感</option>
                    <option value="推理">推理</option>
                    <option value="欢乐">欢乐</option>
                    <option value="机制">机制</option>
                    <option value="阵营">阵营</option>
                </select>
                <select class="filter-select" id="rating-filter">
                    <option value="">所有评分</option>
                    <option value="5">★★★★★</option>
                    <option value="4">★★★★☆</option>
                    <option value="3">★★★☆☆</option>
                    <option value="2">★★☆☆☆</option>
                    <option value="1">★☆☆☆☆</option>
                </select>
            </div>
        </div>

        <!-- 剧本网格布局 -->
        <div class="scripts-grid">
            @foreach (var script in Model)
            {
                <div class="script-card" data-type="@script.Type" data-rating="@script.StarLevel"
                     onclick="window.location.href='@Url.Action("Details", "Scripts", new { id = script.SId })'">
                    <div class="script-image-container">
                        @if (!string.IsNullOrEmpty(script.img))
                        {
                            <img src="@Url.Content(script.img)"
                                 alt="@script.Title"
                                 class="script-image"
                                 loading="lazy"
                                 onerror="this.onerror=null;this.classList.add('image-error')">
                        }
                        else
                        {
                            <div class="no-image">
                                @script.Title.FirstOrDefault()
                            </div>
                        }
                    </div>
                    <div class="script-info">
                        <h3 class="script-title">@script.Title</h3>
                        <div class="script-rating">
                            @for (int i = 0; i < script.StarLevel; i++)
                            {<span class="star">★</span>}
                            @for (int i = script.StarLevel; i < 5; i++)
                            {<span class="star">☆</span>}
                        </div>
                    </div>
                    <div class="script-type">@script.Type</div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 滚动显示动画
        const scrollReveal = () => {
            const cards = document.querySelectorAll('.script-card');

            cards.forEach((card, index) => {
                const cardTop = card.getBoundingClientRect().top;
                const triggerBottom = window.innerHeight * 0.8;

                if (cardTop < triggerBottom) {
                    setTimeout(() => {
                        card.classList.add('visible');
                    }, index * 100);
                }
            });
        };

        // 初始检查
        scrollReveal();

        // 滚动时检查
        window.addEventListener('scroll', scrollReveal);

        // 搜索和筛选功能
        $(document).ready(function () {
            $('#search-btn').click(filterScripts);
            $('#script-search').keypress(function (e) {
                if (e.which === 13) filterScripts();
            });

            $('#type-filter, #rating-filter').change(filterScripts);

            $('.script-image').on('error', function () {
                $(this).replaceWith('<div class="no-image">' + $(this).attr('alt').charAt(0) + '</div>');
            });
        });

        function filterScripts() {
            const searchText = $('#script-search').val().toLowerCase();
            const typeFilter = $('#type-filter').val();
            const ratingFilter = $('#rating-filter').val();

            $('.script-card').each(function () {
                const title = $(this).find('.script-title').text().toLowerCase();
                const type = $(this).data('type');
                const rating = $(this).data('rating');

                const matchesSearch = searchText === '' || title.includes(searchText);
                const matchesType = typeFilter === '' || type === typeFilter;
                const matchesRating = ratingFilter === '' || rating >= parseInt(ratingFilter);

                $(this).toggle(matchesSearch && matchesType && matchesRating);
            });
        }
    </script>
</body>
</html>