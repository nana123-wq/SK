@model IEnumerable<SK.Models.Script>

@{
    ViewBag.Title = "剧本管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>剧本管理</h2>
    <div style="margin-left: -5cm;">
        @Html.ActionLink("创建新剧本", "Create", null, new { @class = "btn btn-yellow" })
    </div>
</div>

<table class="table">
    <tr>
        <th>封面</th>
        <th>剧本标题</th>
        <th>类型</th>
        <th>评分</th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.img))
                {
                    <img src="@Url.Content(item.img)" style="width: 60px; height: 60px; object-fit: cover;" class="rounded">
                }
                else
                {
                    <div style="width: 60px; height: 60px; background-color: #f8f9fa;" class="rounded d-flex align-items-center justify-content-center">
                        <i class="fas fa-image text-muted"></i>
                    </div>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Type)</td>
            <td>
                @for (int i = 0; i < item.StarLevel; i++)
                {
                    <span class="text-warning">★</span>
                }
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.SId }) |
                @Html.ActionLink("删除", "Delete", new { id = item.SId })
            </td>
        </tr>
    }
</table>