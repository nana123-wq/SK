@model SK.Models.Script

@{
    ViewBag.Title = "删除剧本";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center min-vh-100">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card mt-5">
                <div class="card-header d-flex align-items-center">
                    <i class="fas fa-trash-alt text-gold me-2"></i>
                    <h2 class="mb-0">确认删除剧本</h2>
                </div>
                <div class="card-body">
                    <!-- 警告提示区域 -->
                    <div class="alert alert-warning text-center mb-5">
                        <i class="fas fa-exclamation-circle text-3xl text-gold mb-3"></i>
                        <h3 class="text-gold">你确定要删除这个剧本吗？</h3>
                        <p class="text-gray-200 mt-2">此操作不可撤销，剧本的所有数据将被永久删除。</p>
                    </div>

                    <!-- 剧本信息展示 -->
                    <div class="bg-dark-transparent p-5 rounded-lg mb-5">
                        <h4 class="text-gold mb-4 border-b border-gold pb-2">剧本信息</h4>

                        <div class="row g-4">
                            <!-- 左侧信息展示 -->
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label class="form-label text-gold">剧本标题</label>
                                    <p class="form-control-plaintext text-gray-200">@Model.Title</p>
                                </div>

                                <div class="form-group">
                                    <label class="form-label text-gold">剧本类型</label>
                                    <p class="form-control-plaintext text-gray-200">@Model.Type</p>
                                </div>

                                <div class="form-group">
                                    <label class="form-label text-gold">剧本描述</label>
                                    <div class="form-control-plaintext text-gray-200">@Model.Discription</div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label text-gold">评分</label>
                                    <div class="d-flex text-gold">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= Model.StarLevel ? "" : "text-gray-400")"></i>
                                        }
                                        <span class="ml-2 text-gray-200">@Model.StarLevel / 5</span>
                                    </div>
                                </div>
                            </div>

                            <!-- 右侧封面图展示 -->
                            <div class="col-md-5">
                                <div class="text-center">
                                    @if (!string.IsNullOrEmpty(Model.img))
                                    {
                                        <img src="@Url.Content(Model.img)"
                                             alt="剧本封面"
                                             class="img-fluid rounded border border-gold"
                                             style="max-height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="no-image h-50 d-flex align-items-center justify-content-center text-gray-400 border border-gray-600 rounded">
                                            <i class="fas fa-image fa-3x"></i>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 操作按钮 -->
                    <div class="d-flex justify-center gap-4">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger px-6 py-2">
                                <i class="fas fa-trash-alt me-2"></i>确认删除
                            </button>
                        }

                        <a href="@Url.Action("Index", "Scripts")" class="btn btn-outline-gold px-6 py-2">
                            <i class="fas fa-arrow-left me-2"></i>返回列表
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 需添加到_Layout.cshtml或共享样式表（与创建剧本页面统一） */
    :root {
        --color-gold: #FFD700;
        --color-dark: #121212;
        --color-dark-transparent: rgba(18, 18, 18, 0.5);
        --color-gray-200: #f8f9fa;
        --color-gray-300: #e9ecef;
        --color-gray-400: #dee2e6;
        --color-gray-600: #6c757d;
    }

    .text-gold {
        color: var(--color-gold);
    }

    .text-gray-200 {
        color: var(--color-gray-200);
    }

    .text-gray-400 {
        color: var(--color-gray-400);
    }

    .bg-dark-transparent {
        background-color: var(--color-dark-transparent);
    }

    .border-gold {
        border-color: var(--color-gold);
    }

    .btn-gold {
        background-color: var(--color-gold);
        border-color: var(--color-gold);
        color: #555;
        font-weight: 500;
    }

        .btn-gold:hover {
            background-color: #FFA500;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 165, 0, 0.3);
        }

    .btn-outline-gold {
        color: var(--color-gold);
        border-color: var(--color-gold);
    }

        .btn-outline-gold:hover {
            background-color: var(--color-gold);
            color: #555;
        }

    .no-image {
        background-color: rgba(30, 30, 30, 0.8);
        border: 1px dashed var(--color-gray-600);
    }
</style>