@model SK.Models.Order
@{
    ViewBag.Title = "预约";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* 基础样式 */
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #fff;
            background: rgba(0, 0, 0, 0.9);
            padding: 20px;
        }

        /* 页面标题 */
        .page-header {
            margin-bottom: 40px;
            text-align: center;
        }

            .page-header h1 {
                font-size: 3rem;
                color: #ffd700;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 15px;
            }

        /* 卡片样式 */
        .detail-card {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 215, 0, 0.3);
            margin-bottom: 30px;
        }

        .card-header {
            background: linear-gradient(to right, #1a1a1a, #333);
            border-bottom: 1px solid rgba(255, 215, 0, 0.3);
            padding: 15px 20px;
        }

            .card-header h4 {
                color: #ffd700;
                margin: 0;
            }

        /* 表单内容样式 */
        .detail-content {
            padding: 20px;
        }

        .form-control, .form-select {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
        }

            .form-control:focus, .form-select:focus {
                background: rgba(255, 255, 255, 0.2);
                border-color: #ffd700;
                color: #fff;
                box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
            }

        .btn-primary {
            background-color: #ffd700;
            border-color: #ffd700;
            color: #000;
        }

            .btn-primary:hover {
                background-color: #ffed4a;
                border-color: #ffed4a;
            }

        .btn-outline-secondary {
            border-color: rgba(255, 215, 0, 0.3);
            color: #ffd700;
        }

            .btn-outline-secondary:hover {
                background-color: rgba(255, 215, 0, 0.1);
                color: #ffed4a;
            }

        .control-label {
            color: #ffd700;
        }

        .text-danger {
            color: #ff6b6b !important;
        }

        .readonly-field {
            background-color: rgba(255, 255, 255, 0.05) !important;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>预约</h1>
        </div>

        <div class="detail-card">
            <div class="card-header">
                <h4><i class="fas fa-file-alt me-2"></i>预约信息</h4>
            </div>
            <div class="detail-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row g-3">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Content" class="form-label">剧本名</label>
                                @Html.EditorFor(model => model.ScriptTitle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ScriptTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Content" class="form-label">你的名字</label>
                                @Html.EditorFor(model => model.CustomName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Content" class="form-label">联系方式</label>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Content" class="form-label">预约时间</label>
                                @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Content" class="form-label">玩家人数</label>
                                @Html.EditorFor(model => model.PlayerCount, new { htmlAttributes = new { @class = "form-control", min = "1", max = "10" } })
                                @Html.ValidationMessageFor(model => model.PlayerCount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label for="notes" class="form-label">备注</label>
                            <textarea class="form-control" id="notes" rows="2"></textarea>
                        </div>

                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-primary w-100 py-2">
                                <i class="fas fa-save me-2"></i>立即预约
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("AllScripts","Scripts")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>返回列表
            </a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {

            // 设置默认时间为当前时间+1小时
            const now = new Date();
            now.setHours(now.getHours() + 1);
            // 格式化为datetime-local需要的格式
            const formattedDateTime = now.toISOString().slice(0, 16);
            $('#Time').val(formattedDateTime);

            // 手机号验证
            $('#Phone').on('blur', function () {
                const phone = $(this).val();
                if (phone && !/^1[3-9]\d{9}$/.test(phone)) {
                    alert('请输入有效的手机号码！');
                }
            });
        });

        $(document).ready(function () {
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            alert('@TempData["SuccessMessage"]');
            </text>
        }
    });

    </script>
</body>
</html>