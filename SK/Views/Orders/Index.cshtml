@model IEnumerable<SK.Models.Order>
@{
    ViewBag.Title = "订单管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-cart me-2"></i>订单管理</h2>

    </div>

    <table class="table">
        <tr>
            <th>剧本名称</th>
            <th>客户姓名</th>
            <th>联系电话</th>
            <th>预约时间</th>
            <th>玩家数量</th>
            <th>操作</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ScriptTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Time)</td>
                    <td>@Html.DisplayFor(modelItem => item.PlayerCount)</td>
                    <td>
                        @Html.ActionLink("结算", "Create", "Transactions", new { id = item.OId }, null) |
                        @Html.ActionLink("删除", "Delete", new { id = item.OId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>