@model IEnumerable<SK.Models.New>

@{
    ViewBag.Title = "新闻列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>新闻列表</h2>
    <div>
        @Html.ActionLink("发布新闻", "Create", null, new { @class = "btn btn-yellow" })
    </div>
</div>

<table class="table">
    <tr>
        <th>新闻标题</th>
        <th>内容</th>
        <th>操作&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>

            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.RId })
                @Html.ActionLink(" 删除 ", "Delete", new { id = item.RId })
            </td>

        </tr>
    }
</table>